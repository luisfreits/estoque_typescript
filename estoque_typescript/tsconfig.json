    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["**/*.ts"]
}
